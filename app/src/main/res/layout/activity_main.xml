<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timer_zero"
            android:textSize="60sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@string/command_start"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="30sp" app:layout_constraintTop_toBottomOf="@+id/timeText"
            android:layout_marginTop="16dp"/>

    <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="@string/command_reset"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="30sp" app:layout_constraintTop_toBottomOf="@+id/timeText"
            android:layout_marginTop="16dp"/>
    <TextView
            android:id="@+id/timeTextTwenty"
            android:text="@string/timer_twenty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/timeTextTen" android:layout_marginBottom="16dp"/>
    <TextView
            android:id="@+id/timeTextTen"
            android:text="@string/timer_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/timeText" android:layout_marginBottom="16dp"/>
    <Button
            android:id="@+id/buttonMinusTwenty"
            android:text="@string/command_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/timeTextTwenty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/timeTextTwenty"
            app:layout_constraintBottom_toBottomOf="@+id/timeTextTwenty" android:textSize="30sp"/>
    <Button
            android:id="@+id/buttonPlusTwenty"
            android:text="@string/command_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/timeTextTwenty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/timeTextTwenty"
            app:layout_constraintTop_toTopOf="@+id/timeTextTwenty" android:textSize="30sp"/>
    <Button
            android:id="@+id/buttonMinusTen"
            android:text="@string/command_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/timeTextTen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/timeTextTen"
            app:layout_constraintBottom_toBottomOf="@+id/timeTextTen" android:textSize="30sp"/>
    <Button
            android:id="@+id/buttonPlusTen"
            android:text="@string/command_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/timeTextTen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/timeTextTen"
            app:layout_constraintBottom_toBottomOf="@+id/timeTextTen" android:textSize="30sp"/>
    <Button
            android:id="@+id/buttonPip"
            android:text="PIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeText" android:layout_marginTop="80dp"
            android:textSize="24sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>